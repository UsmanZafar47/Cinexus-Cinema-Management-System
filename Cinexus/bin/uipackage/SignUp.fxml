<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ComboBox?>


<AnchorPane fx:id="SignUpPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignUpController">    
 <children>
	<VBox alignment="CENTER" prefHeight="462.0" prefWidth="726.0" spacing="20.0" style="-fx-background-color: white;" stylesheets="@designLayout.css">
		<Text styleClass="title" text="Welcome to Cinexus" />
		<TextField fx:id="nameField" promptText="Name"/>
	    <TextField fx:id="cnicField" promptText="CNIC"/>
	    <TextField fx:id="emailField" promptText="Email"/>
	   	<ComboBox fx:id="roleComboBox" style="-fx-background-color: #FF0022; -fx-text-fill: white; -fx-prompt-text-fill: white;" promptText="Select Role" />
	  	<Text fx:id="actionTarget" />
	    <TextField fx:id="usernameField" promptText="Username"/>
	    <PasswordField fx:id="passwordField" promptText="Password"/>
	    <PasswordField fx:id="repasswordField" promptText="Retype Password"/>
	    
	    <Button fx:id="signupButton" onAction="#onSignUp" styleClass="signup-button" text="Signup" />
		<Text fx:id="actionTarget" styleClass="action-text" />
		<HBox>
			<Text text="Have an account already?" />
	        <Button fx:id="loginButton" onAction="#loadLogin" styleClass="custom-button" text="Log In" />
	    </HBox>
	</VBox>
 </children>
</AnchorPane>
